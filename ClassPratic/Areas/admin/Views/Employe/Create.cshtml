
@model Employe
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <form asp-area="admin" asp-controller="employe" asp-action="create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.ImageFile" class="form-label">Image</label>
                    <input class="form-control" asp-for="@Model.ImageFile">
                    <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.FulName" class="form-label">FullName</label>
                    <input class="form-control" asp-for="@Model.FulName">
                    <span asp-validation-for="@Model.FulName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Email" class="form-label">Email</label>
                    <input class="form-control" asp-for="@Model.Email">
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div><div class="mb-3">
                    <label asp-for="@Model.Age" class="form-label">Age</label>
                    <input class="form-control" asp-for="@Model.Age">
                    <span asp-validation-for="@Model.Age" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Create</button>
            </form>
        </div>
    </div>
</div>

